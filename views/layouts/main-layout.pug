- let details = siteDetails


doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{details.title}
        link(rel="stylesheet", href="/css/main.css")
        block styles 
    body 
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a(href="/", class=(details.path === '/' ? 'active' : '')) Shop
                    li.main-header__item
                        a(href="/products", class=(details.path === '/products' ? 'active' : '')) Products
                    li.main-header__item
                        a(href="/cart", class=(details.path === '/cart' ? 'active' : '')) Cart
                    li.main-header__item
                        a(href="/orders", class=(details.path === '/orders' ? 'active' : '')) Orders
                    li.main-header__item
                        a(href="/admin/products", class=(details.path === '/admin/products' ? 'active' : '')) Admin Products
        main 
            block content 